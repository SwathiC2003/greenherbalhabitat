<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ProfileFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        android:background="@color/irishgreen"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Profile"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:background="@color/irishgreen"
        app:layout_constraintTop_toBottomOf="@+id/tbProfileFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_margin="10.00dp"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textStyle="bold"
            android:textSize="23.40dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HI USER"
            android:layout_marginTop="6.50dp"
            android:textSize="19.50dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR INFORMATION"
            android:layout_marginTop="19.50dp"
            android:textSize="15.60dp"
            android:textColor="@color/dark"/>
        <LinearLayout
            android:id="@+id/llOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="13.00dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.50dp"
                android:src="@drawable/baseline_add_shopping_cart_24"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:text="Your Orders"
                android:layout_marginStart="13.00dp"
                android:textSize="16.90dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="26.00dp"
                android:layout_weight="0.1"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:tint="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginVertical="19.50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_apartment_24"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:text="Address Book"
                android:layout_marginStart="13.00dp"
                android:textSize="16.90dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="26.00dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:tint="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_logout_24"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:text="LogOut"
                android:layout_marginStart="13.00dp"
                android:textSize="16.90dp"
                android:layout_gravity="center"
                android:textColor="@color/black"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="26.00dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:tint="@color/black"
                />
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
